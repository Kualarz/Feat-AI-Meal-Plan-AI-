#!/bin/sh
# Auto-push after each commit. This script runs after a commit and will push the current branch to origin.
# It's placed in `.githooks` and we'll point git's hooks path to that directory so it can be versioned.

# Try to detect current branch and push it
branch=$(git rev-parse --abbrev-ref HEAD)
echo "Auto-push hook: pushing branch $branch to origin..."
git push origin "$branch"

exit 0
